{
  "name": "@repo/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "tsc",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@repo/utils": "workspace:*",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^22.5.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3"
  }
}
